@model IEnumerable<Post.Model.User>

@{
	ViewBag.Title = "AccountsList";
}

<h2>AccountsList</h2>

<p>
	@Html.ActionLink("Create new account", "AddUser")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Account)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Password)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Account)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Password)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.ActionLink("Edit", "EditData", new { id=item.ID }) |
					@Html.ActionLink("Remove Password", "RemovePassword", new { id=item.ID }) |
					@Html.ActionLink("Delete", "DeleteUser", new { id=item.ID })
			</td>
		</tr>
	}

</table>
